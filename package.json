  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.1.1",
    "@tanstack/solid-query-devtools": "^5.35.1",
    "commitlint": "^19.3.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
